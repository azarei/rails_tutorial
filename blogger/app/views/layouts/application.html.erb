<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="header">
      <div id="user_bar">
        <% if logged_in? %>
          <span id="login_status">
            <%= "#{current_user.username} is logged in." %>
          </span>
          <%= link_to 'logout', logout_path, :class => 'logout' %>
        <% else %>
          <%= link_to 'login', login_path, :class => 'login' %>
        <% end %>
      </div>
    </div>
    <div id="side_navigation">
      <%= build_navigation %>
    </div>
    <div id="flash-area">
      <span class="flash"><%= flash[:message] %></div>
    </div>

    <div id="content">
      <%= yield %>
    </div>
  </body>
</html>
